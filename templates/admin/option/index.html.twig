{% extends 'base.html.twig' %}

{% block title %}Option index{% endblock %}

{% block body %}
    <div class="container text-center">
    {% for label, messages in app.session.flashBag.all() %}
        {% for message in messages %}
            <div class="absoluteCenter">
                <div class="alert alert-{{ label }} flash" role="alert">
                    {{ message }}
                </div>
            </div>
        {% endfor %}
    {% endfor %}
    </div>
    <div class="container mt-4">
        <h1>Les options</h1>
        
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Intitulé</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for option in options %}
                <tr>
                    <td>{{ option.id }}</td>
                    <td>{{ option.name }}</td>
                    <td>
                        <a href="{{ path('admin.option.edit', {'id': option.id}) }}" class="btn btn-primary">Éditer</a>
                        {{ include('admin/option/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun résultat</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="row justify-content-end">
            <a href="{{ path('admin.option.new') }}" class="btn btn-primary">Ajout d'option</a>
        </div>
    </div>
{% endblock %}
