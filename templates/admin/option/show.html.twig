{% extends 'base.html.twig' %}

{% block title %}Option{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex">
            <div class="mr-auto p-2 h1">Option</div>
            <div class="p-2">
                <a href="{{ path('admin.option.index') }}" class="btn btn-info p-2">Retour à la liste</a>
            </div>
        </div>
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ option.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ option.name }}</td>
            </tr>
            </tbody>
        </table>
        <div class="d-flex justify-content-between">
            <a href="{{ path('admin.option.edit', {'id': option.id}) }}" class="btn btn-primary">Éditer</a>
            {{ include('admin/option/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
